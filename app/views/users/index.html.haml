%h1 Listing users

%table
  %thead
    %tr
      %th Handle
      %th Password
      %th Name
      %th Bio
      %th
      %th
      %th

  %tbody
    - @users.each do |user|
      %tr
        %td= user.handle
        %td= user.password
        %td= user.name
        %td= user.bio
        %td= link_to 'Show', user
        %td= link_to 'Edit', edit_user_path(user)
        %td= link_to 'Destroy', user, :method => :delete, :data => { :confirm => 'Are you sure?' }

